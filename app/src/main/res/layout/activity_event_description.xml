<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.es.spotaneous.EventDescriptionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/placeholder"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <TextView
                    android:id="@+id/title"
                    android:layout_gravity="bottom"
                    android:shadowColor="@android:color/darker_gray"
                    android:shadowDx="-1"
                    android:shadowDy="1"
                    android:shadowRadius="0.01"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:padding="10dp"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:text="Torneio Fifa16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:text="Date: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/date"
                    android:textSize="16sp"
                    android:textColor="#455A64"
                    android:text="@string/placeholder_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:text="Time: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/hour"
                    android:textSize="16sp"
                    android:textColor="#455A64"
                    android:text="@string/placeholder_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:text="Cost: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cost"
                    android:textSize="16sp"
                    android:textColor="#455A64"
                    android:text="10 â‚¬"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="#455A64"
                android:text="@string/placeholder_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:onClick="directions"
                android:layout_gravity="right|end"
                android:layout_margin="10dp"
                android:src="@drawable/directions"
                android:layout_width="40dp"
                android:layout_height="40dp" />


            <TextView
                android:id="@+id/friendsattending"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends attending:"
                android:textSize="20dp"
                android:visibility="invisible"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/friend1"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/friend1name"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/friend1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="10dp"
            android:id="@+id/friend2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <TextView
            android:id="@+id/friend2name"
            android:layout_below="@+id/friend2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="10dp"
        android:id="@+id/friend3"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/friend3name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/friend3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>

</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bottomButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_inserir"
                    android:text="@string/aderir"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>
